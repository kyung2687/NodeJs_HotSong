<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id='flexDiv'>
      <div id='header'>
        <div id='back' onclick="location.href='/index'"></div>
        <div style="flex: 3; justify-content: center;">
          <a style="font-weight: 600; color: #fff; font-size: 60px;
                    text-align: center; justify-content: center; align-items: center;
                    display: flex;">
            <%= name %>님의 리스트
          </a></div>
        <div></div>
      </div>
      <div id='body'>
        <ul class="list">
          <% for(var i=songlist.length - 1; i >= 0; i--) {%>
            <li>
              <div class="songli" OnClick="location.href='<%= songlist[i].url %>'">
                <div class="topimage" style="background-image: url(<%= songlist[i].image %>);flex:3;background-size: 100%; margin-right:10px">
                </div>
                <div style="flex: 7; flex-direction: column; justify-content: start; align-items: flex-start;">
                  <a class="title"><%= songlist[i].title %></a>
                  <a class="singer"><%= songlist[i].singer %></a>
                </div>
                <div style="flex: 10; justify-content: start; align-items: center;">
                  <a class="author">[<%= songlist[i].task %>]&nbsp</a>
                  <a class="author"><%= songlist[i].name %></a>
                </div>
              </div>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </body>
</html>